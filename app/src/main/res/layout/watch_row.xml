<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:background="@color/BlueBrick"
  android:padding="10sp">
  <TextView android:id="@+id/row_Id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone">
  </TextView>
  <ImageView android:id="@+id/rowCondImg" 
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"    
    android:layout_marginRight="6dp" 
    android:layout_toRightOf="@+id/row_Id">
  </ImageView>
  <TextView android:id="@+id/rowCity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:textStyle="italic"
    android:textColor="@color/BrightChar"
    android:maxLines="1"
    android:layout_toRightOf="@+id/rowCondImg">
  </TextView>
  <TextView android:id="@+id/rowState"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:textStyle="italic"
    android:textColor="@color/BrightChar"
    android:layout_toRightOf="@+id/rowCity">
  </TextView>
  <TextView android:id="@+id/rowCondition"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:textColor="@color/BrightChar"
    android:textSize="11sp"
    android:layout_marginLeft="20dp"
    android:layout_alignBaseline="@+id/rowTime"
    android:layout_toRightOf="@+id/rowCondImg">
  </TextView>
  <TextView android:id="@+id/rowSpecial"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:textColor="@color/BrightChar"
    android:textSize="11sp"
    android:layout_alignBaseline="@+id/rowCondImg"
    android:layout_toRightOf="@+id/rowCondImg">
  </TextView>
  <TextView android:id="@+id/rowTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/BrightChar"
    android:layout_centerVertical="true"
    android:layout_marginRight="25dp"
    android:layout_toLeftOf="@id/rowTemperature">
  </TextView>
  <TextView android:id="@id/rowTemperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:textColor="@color/BrightChar"
    android:textSize="24sp"
    android:layout_alignParentRight="true">
  </TextView>
  <ImageView android:id="@+id/rowWarning" android:src="@drawable/warningsm"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:contentDescription="@string/img_warning"
    android:layout_alignLeft="@id/rowTemperature"
    android:visibility="gone"
    android:layout_below="@id/rowTemperature">
  </ImageView>
  <ImageView android:id="@+id/rowMove" android:src="@drawable/moveit" 
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:contentDescription="@string/img_move"
    android:layout_alignParentRight="true"
    android:visibility="gone"
    android:layout_below="@id/rowTemperature">
  </ImageView>
</RelativeLayout>
